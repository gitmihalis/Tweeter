<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Favorites:</b> <%= @user.favorites.count %></span>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><span class="glyphicon glyphicon-star" aria-hidden="true"></span> <%= @title %></h3>
    <% if @user.favorites.any? %>
      <ul class="microposts">
        <%= render @favorites %>
      </ul>
      <%= will_paginate @favorites %>
    <% end %>
  </div>
</div>